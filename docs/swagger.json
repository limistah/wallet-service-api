{
    "swagger": "2.0",
    "info": {
        "description": "A wallet service API for managing user wallets and transactions",
        "title": "Wallet Service API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "url": "http://www.swagger.io/support",
